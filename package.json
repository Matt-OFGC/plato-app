{
  "name": "plato",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "prisma generate && next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "postinstall": "prisma generate",
    "diagnose:ui": "node scripts/diagnose-ui.mjs",
    "clean:caches": "rimraf .next dist build node_modules/.vite",
    "audit:responsive": "node src/app/scripts/audit-responsive.js",
    "studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:entitlements": "tsx scripts/seed-entitlements.ts",
    "db:reset": "prisma migrate reset --force && npm run db:seed",
    "db:migrate": "prisma migrate dev",
    "db:status": "prisma migrate status",
    "db:backup": "tsx scripts/db-backup.ts",
    "db:analyze": "tsx scripts/db-analyze.ts",
    "dev:clean": "npm run db:reset && npm run dev",
    "dev:seed": "npm run db:seed && npm run dev",
    "test:db": "prisma migrate dev --name test && npm run db:seed",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "perf:audit": "npm run build && npm run start & sleep 5 && lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json --chrome-flags='--headless' && kill %1",
    "perf:analyze": "npm run build && npx @next/bundle-analyzer",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hello-pangea/dnd": "^18.0.1",
    "@prisma/client": "^6.17.0",
    "@react-email/components": "^0.5.6",
    "@react-email/render": "^1.3.2",
    "@stripe/stripe-js": "^8.0.0",
    "@types/xlsx": "^0.0.35",
    "@vercel/blob": "^2.0.0",
    "bcrypt": "^6.0.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "decimal.js": "^10.6.0",
    "framer-motion": "^12.23.24",
    "html2pdf.js": "^0.12.1",
    "jose": "^6.1.0",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "next": "15.5.4",
    "next-auth": "^5.0.0-beta.29",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.4.6",
    "papaparse": "^5.5.3",
    "pdf-parse": "^2.3.9",
    "prisma": "^6.17.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-window": "^2.2.2",
    "react-window-infinite-loader": "^2.0.0",
    "recharts": "^3.2.1",
    "resend": "^6.1.2",
    "socket.io": "^4.8.1",
    "stripe": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "xlsx": "^0.18.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@faker-js/faker": "^9.3.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "tailwindcss": "^4",
    "tsx": "^4.19.2",
    "typescript": "^5"
  }
}
