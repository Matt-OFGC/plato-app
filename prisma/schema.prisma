  reportedAt        DateTime          @default(now())
  resolvedAt        DateTime?
  resolvedBy        Int?
  resolutionNotes   String?
  company           Company           @relation("equipmentIssues", fields: [companyId], references: [id], onDelete: Cascade)
  equipment         EquipmentRegister @relation(fields: [equipmentId], references: [id], onDelete: Cascade)
  reportedByUser    User              @relation(fields: [reportedBy], references: [id], name: "equipmentIssuesReported")
  resolvedByUser    User?             @relation(fields: [resolvedBy], references: [id], name: "equipmentIssuesResolved")
