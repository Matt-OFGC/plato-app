{
  "name": "Plato - Restaurant Management",
  "short_name": "Plato",
  "description": "Your ultimate restaurant management companion - recipes, staff scheduling, wholesale orders, and team messaging",
  "start_url": "/dashboard",
  "display": "standalone",
  "orientation": "portrait-primary",
  "background_color": "#f3f4f6",
  "theme_color": "#059669",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "categories": ["business", "productivity", "food"],
  "icons": [
    {
      "src": "/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-maskable-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icon-maskable-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Recipes",
      "short_name": "Recipes",
      "description": "Manage your recipe collection",
      "url": "/dashboard/recipes",
      "icons": [
        {
          "src": "/icons/recipe-shortcut.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Staff Schedule",
      "short_name": "Schedule",
      "description": "View and manage staff schedules",
      "url": "/dashboard/staff",
      "icons": [
        {
          "src": "/icons/schedule-shortcut.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Wholesale Orders",
      "short_name": "Wholesale",
      "description": "Manage wholesale customers and orders",
      "url": "/dashboard/wholesale",
      "icons": [
        {
          "src": "/icons/wholesale-shortcut.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Team Messages",
      "short_name": "Messages",
      "description": "Communicate with your team",
      "url": "/dashboard/messages",
      "icons": [
        {
          "src": "/icons/messages-shortcut.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "New Recipe",
      "short_name": "New Recipe",
      "description": "Create a new recipe",
      "url": "/dashboard/recipes/new",
      "icons": [
        {
          "src": "/icons/new-recipe-shortcut.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Ingredients",
      "short_name": "Ingredients",
      "description": "Manage ingredients and suppliers",
      "url": "/dashboard/ingredients",
      "icons": [
        {
          "src": "/icons/ingredients-shortcut.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Dashboard overview"
    },
    {
      "src": "/screenshots/mobile-recipes.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Recipe management on mobile"
    },
    {
      "src": "/screenshots/desktop-schedule.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Staff scheduling interface"
    },
    {
      "src": "/screenshots/mobile-messages.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Team messaging on mobile"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+plato",
      "url": "/dashboard?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/dashboard/recipes/import",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"]
      }
    }
  ],
  "share_target": {
    "action": "/dashboard/recipes/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "recipe_image",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "handle_links": "preferred"
}